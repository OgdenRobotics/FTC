package org.firstinspires.ftc.robotcontroller.internal;

import com.qualcomm.robotcore.eventloop.opmode.OpModeManager;
import com.qualcomm.robotcore.eventloop.opmode.OpModeRegister;
import com.qualcomm.robotcore.hardware.DcMotor;

/**
 * {@link FtcautoModeRegister} is responsible for registering automodes for use in an FTC game.
 * @see #register(autoModeManager)
 */
public class FtcOpModeRegister implements OpModeRegister {

// Step 1: Define the Motors

 private DcMotor NotMotor1 = null;
 private DcMotor NotMotor2 = null;
 private DcMotor NotMotor3 = null;
 private DcMotor NotMotor4 = null;

package org.firstinspires.ftc.teamcode;

@Override
public void init {

NotMotor1 = hardwareMap.get(DcMotor.class,"NotMotor1");
NotMotor2 = hardwareMap.get(DcMotor.class,"NotMotor2");
NotMotor3 = hardwareMap.get(DcMotor.class,"NotMotor3");
//        Move forward until at foundation.
//                Turn 90 right
//        grab the foundation
//        turn 90 degrees left
//        move backwards until your at the build site
//        let go of the foundation
//                (future) move to the skystone
//                (future)place the skystone on the foundation
//                (future)Repeat previous two steps 4 time
//        turn right 90
//        move forward to the line
}
